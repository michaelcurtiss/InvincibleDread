\par\plain {\f0\fs24\b0\i0 \loch\af0\hich\af0\dbch\af0\uc1\u8220\'93That\u8217\'92s progress!\u8221\'94}
\par\plain {\f0\fs24\b0\i0 \loch\af0\hich\af0\dbch\af0\uc1\u8220\'93A frightened person.\u8221\'94}
\par\plain {\f0\fs24\b0\i0 Vigram leaned back and studied the face he\loch\af0\hich\af0\dbch\af0\uc1\u8217\'92d painted. }
